@model ShippingDetailsViewModel

    <form asp-controller="Cart" asp-action="Complete" method="post">
        <div class="form-group">
            <label asp-for="ShippingDetail.FirstName"> Ad </label>
            <input asp-for="ShippingDetail.FirstName" class="form-control" placeholder="Müşteri Adı" required />
            
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.LastName"> Soyad </label>
            <input asp-for="ShippingDetail.LastName" class="form-control" placeholder="Müşteri Soyadı" required />
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Email"> Email </label>
            <input asp-for="ShippingDetail.Email" class="form-control" placeholder="E-Posta" type="email" required/>
            <span class="text-danger" asp-validation-for="ShippingDetail.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Age"> Yaş </label>
            <input asp-for="ShippingDetail.Age" class="form-control" placeholder="Müşteri Yaşı" required />
            <span class="text-danger" asp-validation-for="ShippingDetail.Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.City"> Şehir </label>
            <input asp-for="ShippingDetail.City" class="form-control" placeholder="Şehir" required />
            <span class="text-danger" asp-validation-for="ShippingDetail.City"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Address"> Adres </label>
            <input asp-for="ShippingDetail.Address" class="form-control" placeholder="Adres" required/>
            <span class="text-danger" asp-validation-for="ShippingDetail.Address"></span>
        </div>
        <input type="submit" value="Kaydet" class=" btn btn-success btn-group-sm" />
    </form>
